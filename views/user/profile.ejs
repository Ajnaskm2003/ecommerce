<%- include("../../views/partials/user/profileHeader") %>

<div class="content">
    <!-- Profile Section -->
    <div class="profile-section" style="display: flex; justify-content: center; padding: 40px 20px;">
        <div class="profile-card" style="
            text-align: center;
            padding: 30px 20px;
            min-width: 300px;
            max-width: 380px;
            width: 90%;
            border-radius: 16px;
            box-shadow: 0 4px 20px rgba(0,0,0,0.1);
            background: #fff;
            overflow: hidden;          <!-- This prevents any overflow -->
            word-wrap: break-word;     <!-- Old browsers -->
            overflow-wrap: anywhere;   <!-- Modern browsers - forces break anywhere -->
        ">
            
            <!-- Profile Image -->
            <% if (user.image) { %>
                <img src="<%= user.image %>" alt="<%= user.name %>" style="width: 120px; height: 120px; object-fit: cover; border-radius: 50%; border: 4px solid #f0f0f0; margin-bottom: 20px;">
            <% } else { %>
                <img src="https://via.placeholder.com/120/dddddd/666666?text=<%= user.name.charAt(0).toUpperCase() %>" alt="<%= user.name %>" style="width: 120px; height: 120px; object-fit: cover; border-radius: 50%; border: 4px solid #f0f0f0; margin-bottom: 20px;">
            <% } %>

            <!-- Name -->
            <h3 style="margin: 0 0 12px; font-size: 1.6rem; color: #2c3e50; overflow-wrap: anywhere;">
                <%= user.name %>
            </h3>

            <!-- Email -->
            <p style="margin: 8px 0; color: #555; font-size: 1rem; overflow-wrap: anywhere;">
                <i class="fas fa-envelope" style="margin-right: 8px;"></i><%= user.email %>
            </p>

            <!-- Phone - This will now wrap properly and never go outside the card -->
            <% if (user.phone) { %>
                <p style="margin: 8px 0; color: #555; font-size: 1rem; overflow-wrap: anywhere; hyphens: auto;">
                    <i class="fas fa-phone" style="margin-right: 8px;"></i><%= user.phone %>
                </p>
            <% } %>

        </div>
    </div>

    <!-- Menu Cards - 100% unchanged -->
    <div class="card-container">
        <div class="card">
            <a href="/orders">
                <i class="fas fa-box"></i>
                <h4>My Orders</h4>
            </a>
        </div>
        <div class="card">
            <a href="/myInfo">
                <i class="fas fa-user-edit"></i>
                <h4>Edit Profile</h4>
            </a>
        </div>
        <div class="card">
            <a href="/wallet">
                <i class="fas fa-wallet"></i>
                <h4>My Wallet</h4>
            </a>
        </div>
        <div class="card">
            <a href="/">
                <i class="fas fa-home"></i>
                <h4>Home</h4>
            </a>
        </div>
    </div>
</div>
</div>

<div class="footer">&copy; 2025 MyShop. All rights reserved.</div>

</body>
</html>