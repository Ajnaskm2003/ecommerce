<!DOCTYPE html>
<html>
<head>
  <title>Sign Up - Emporium</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <style>
    body {
      font-family: 'Poppins', sans-serif;
      display: flex;
      height: 100vh;
      align-items: center;
      justify-content: center;
      background-color: #f7f9fc;
    }

    .signup-container {
      display: flex;
      background: white;
      border-radius: 20px;
      box-shadow: 0px 10px 30px rgba(0, 0, 0, 0.1);
      overflow: hidden;
    }

    .left-section {
      background: url('/img/backgr1.jpeg') no-repeat center center/cover;
      width: 300px;
      height: 450px;
      position: relative;
    }

    .left-section .logo {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      background-color: rgba(255, 255, 255, 0.8);
      padding: 20px;
      border-radius: 10px;
    }

    .logo img {
      width: 100px;
      height: 100px;
    }

    .form-section {
      padding: 40px;
      width: 400px;
      height: 450px;
    }

    .form-section h2 {
      font-weight: 700;
      font-size: 24px;
      margin-bottom: 20px;
      text-align: center;
      color: #333;
    }

    .form-control {
      height: 40px;
      border-radius: 8px;
      padding-left: 12px;
      font-size: 14px;
      transition: 0.3s;
    }

    .form-control:focus {
      box-shadow: 0px 0px 6px rgba(0, 123, 255, 0.2);
      border-color: #007bff;
    }

    .btn-primary {
      height: 40px;
      border-radius: 10px;
      font-weight: 600;
      font-size: 14px;
      background-color: #007bff;
      border-color: #007bff;
    }

    .btn-primary:hover {
      background-color: #0056b3;
      border-color: #0056b3;
    }

    .google-btn {
      height: 40px;
      border-radius: 10px;
      font-size: 13px;
      font-weight: 500;
    }

    .google-btn img {
      width: 18px;
      margin-right: 8px;
      vertical-align: middle;
    }

    .text-center p a {
      font-weight: 500;
      color: #007bff;
      text-decoration: none;
    }

    .text-center p a:hover {
      text-decoration: underline;
    }

    .error-message {
      color: #dc3545;
      font-size: 13px;
      margin-top: 5px;
      display: block;
      font-weight: 500;
    }

    .flash-error {
      color: #dc3545;
      background: #ffe6e6;
      padding: 10px;
      border-radius: 8px;
      margin-bottom: 15px;
      text-align: center;
      font-size: 14px;
    }
  </style>
</head>
<body>
  <div class="signup-container">
    <div class="left-section">
      <div class="logo">
        <img src="/img/logo.jpg" alt="Emporium The Shoe Store">
      </div>
    </div>

    <div class="form-section">
      <h2>Join Emporium</h2>

      <% if (typeof flash !== 'undefined' && flash.error) { %>
        <div class="flash-error"><%= flash.error %></div>
      <% } %>

      <form id="registerForm" action="/signup" method="POST">
        <div class="mb-2">
          <input type="text" name="name" class="form-control" id="userName" placeholder="Enter Name" value="<%= typeof name !== 'undefined' ? name : '' %>">
          <span id="userNameError" class="error-message"></span>
        </div>

        <div class="mb-2">
          <input type="email" name="email" class="form-control" id="userEmail" placeholder="Email Address" value="<%= typeof email !== 'undefined' ? email : '' %>">
          <span id="userEmailError" class="error-message"></span>
        </div>

        <div class="row mb-2">
          <div class="col">
            <input type="password" name="password" class="form-control" id="userPassword" placeholder="Password">
            <span id="userPasswordError" class="error-message"></span>
          </div>
          <div class="col">
            <input type="password" name="confirmPassword" class="form-control" id="confirmUserPassword" placeholder="Confirm Password">
            <span id="confirmUserPasswordError" class="error-message"></span>
          </div>
        </div>

        <button type="submit" class="btn btn-primary w-100">Create Account</button>
      </form>

      <div class="text-center mt-2">
        <a href="/auth/google" class="btn btn-outline-secondary google-btn w-100">
          <img src="https://img.icons8.com/color/48/000000/google-logo.png" alt="Google"> Sign Up with Google
        </a>
      </div>

      <div class="text-center mt-3">
        <p>Already registered? <a href="/signin">Log in here</a></p>
      </div>
    </div>
  </div>

  <script>
    document.addEventListener("DOMContentLoaded", function() {
      const form = document.getElementById("registerForm");

      form.addEventListener("submit", function(event) {
        // Reset errors
        document.querySelectorAll(".error-message").forEach(el => el.textContent = "");

        let hasErrors = false;

        const name = document.getElementById("userName").value.trim();
        const email = document.getElementById("userEmail").value.trim();
        const password = document.getElementById("userPassword").value;
        const confirmPassword = document.getElementById("confirmUserPassword").value;

        // Username: 4â€“10 characters
        if (!name) {
          document.getElementById("userNameError").textContent = "Name is required.";
          hasErrors = true;
        } else if (name.length < 4) {
          document.getElementById("userNameError").textContent = "Name must be at least 4 characters.";
          hasErrors = true;
        } else if (name.length > 10) {
          document.getElementById("userNameError").textContent = "Name must not exceed 10 characters.";
          hasErrors = true;
        }

        // Email
        if (!email) {
          document.getElementById("userEmailError").textContent = "Email is required.";
          hasErrors = true;
        } else if (!/^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email)) {
          document.getElementById("userEmailError").textContent = "Please enter a valid email.";
          hasErrors = true;
        }

        // Strong Password
        if (!password) {
          document.getElementById("userPasswordError").textContent = "Password is required.";
          hasErrors = true;
        } else if (password.length < 6) {
          document.getElementById("userPasswordError").textContent = "Password must be at least 6 characters.";
          hasErrors = true;
        } else if (!/(?=.*[a-z])(?=.*[A-Z])(?=.*\d)/.test(password)) {
          document.getElementById("userPasswordError").textContent = 
            "Password must contain uppercase, lowercase, and number.";
          hasErrors = true;
        }

        // Confirm Password
        if (password !== confirmPassword) {
          document.getElementById("confirmUserPasswordError").textContent = "Passwords do not match.";
          hasErrors = true;
        }

        if (hasErrors) {
          event.preventDefault();
        }
      });
    });
  </script>
</body>
</html>