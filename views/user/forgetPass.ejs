
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Forgot Password - Emporium</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">
  <style>
    body {
      font-family: 'Poppins', sans-serif;
      display: flex;
      height: 100vh;
      align-items: center;
      justify-content: center;
      background-color: #f7f9fc;
    }

    .forgot-container {
      display: flex;
      background: white;
      border-radius: 20px;
      box-shadow: 0px 10px 30px rgba(0, 0, 0, 0.1);
      overflow: hidden;
    }

    .left-section {
      background: url('/img/backgr1.jpeg') no-repeat center center/cover;
      width: 300px;
      height: 400px;
      position: relative;
    }

    .left-section .logo {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      background-color: rgba(255, 255, 255, 0.8);
      padding: 20px;
      border-radius: 10px;
    }

    .logo img {
      width: 100px;
      height: 100px;
    }

    .form-section {
      padding: 40px;
      width: 400px;
      height: 400px;
    }

    .form-section h2 {
      font-weight: 700;
      font-size: 24px;
      text-align: center;
      margin-bottom: 20px;
      color: #333;
    }

    .form-control {
      height: 40px;
      border-radius: 8px;
      padding-left: 12px;
    }

    .btn-arrow {
      height: 40px;
      width: 50px;
      border-radius: 10px;
      font-weight: bold;
      background-color: #007bff;
      color: white;
      border: none;
    }

    .btn-primary {
      height: 40px;
      border-radius: 10px;
      font-weight: 600;
      font-size: 14px;
      background-color: #007bff;
    }

    .alert {
      font-size: 14px;
      padding: 10px;
      border-radius: 8px;
      display: none;
    }
  </style>
</head>
<body>
  <div class="forgot-container">
    <div class="left-section">
      <div class="logo">
        <img src="/img/logo.jpg" alt="Emporium The Shoe Store" />
      </div>
    </div>

    <div class="form-section">
      <h2>Forgot Password</h2>

      <div id="error-message" class="alert alert-danger text-center"></div>

      <form id="email-form" action="/forgot-password/send-otp" method="POST" class="mb-3 d-flex">
        <input type="email" name="email" class="form-control me-2" placeholder="Enter your email" />
        <button type="submit" class="btn-arrow">&rarr;</button>
      </form>

      <form id="otp-form" action="/forgot-password/verify-otp" method="POST">
        <input type="hidden" name="email" value="" />
        <div class="mb-3">
          <input type="text" name="otp" class="form-control" placeholder="Enter OTP" />
        </div>
        <button type="submit" class="btn btn-primary w-100">Submit</button>
      </form>
    </div>
  </div>

  <script>
    const errorMessages = {
      email: "Please fill out the field",
      otp: "Please fill out the field"
    };

    const emailForm = document.getElementById('email-form');
    const otpForm = document.getElementById('otp-form');
    const errorMessage = document.getElementById('error-message');

    function showError(message) {
      errorMessage.textContent = message;
      errorMessage.style.display = 'block';
      setTimeout(() => {
        errorMessage.style.display = 'none';
        errorMessage.textContent = '';
      }, 3000);
    }

    function hideError() {
      errorMessage.style.display = 'none';
      errorMessage.textContent = '';
    }

    emailForm.addEventListener('submit', async function(event) {
      event.preventDefault();
      const emailInput = emailForm.querySelector('input[name="email"]');
      const emailValue = emailInput.value.trim();
      console.log('Email input value:', emailValue, 'Type:', typeof emailValue);
      hideError();

      if (!emailValue) {
        showError(errorMessages.email);
        return;
      }

      try {
        const response = await fetch('/forgot-password/send-otp', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ email: emailValue })
        });

        const data = await response.json();
        if (data.success) {
          console.log('OTP sent:', data.message);
          showError('OTP sent to your email');
          otpForm.querySelector('input[name="email"]').value = emailValue;
        } else {
          showError(data.message);
        }
      } catch (error) {
        console.error('Error sending OTP:', error.message, error.stack);
        showError('Failed to send OTP. Please try again.');
      }
    });

    otpForm.addEventListener('submit', async function(event) {
      event.preventDefault();
      const emailInput = otpForm.querySelector('input[name="email"]');
      const otpInput = otpForm.querySelector('input[name="otp"]');
      const emailValue = emailInput.value.trim();
      const otpValue = otpInput.value.trim();
      console.log('Verify OTP - Email:', emailValue, 'OTP:', otpValue, 'Type:', typeof otpValue);
      hideError();

      if (!otpValue) {
        showError(errorMessages.otp);
        return;
      }
      if (!emailValue) {
        showError('Email is missing. Please start over.');
        return;
      }

      try {
        const response = await fetch('/forgot-password/verify-otp', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ email: emailValue, otp: String(otpValue) }) // Ensure OTP is a string
        });

        const data = await response.json();
        if (data.success) {
          console.log('OTP verified:', data.message);
          showError('OTP verified successfully');
          window.location.href = `/change-password?email=${encodeURIComponent(emailValue)}`;
        } else {
          showError(data.message);
        }
      } catch (error) {
        console.error('Error verifying OTP:', error.message, error.stack);
        showError('Failed to verify OTP. Please try again.');
      }
    });
  </script>
</body>
</html>
