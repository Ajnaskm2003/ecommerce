<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Forgot Password - Emporium</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">
  <style>
    body {
      font-family: 'Poppins', sans-serif;
      display: flex;
      height: 100vh;
      align-items: center;
      justify-content: center;
      background-color: #f7f9fc;
    }

    .forgot-container {
      display: flex;
      background: white;
      border-radius: 20px;
      box-shadow: 0px 10px 30px rgba(0, 0, 0, 0.1);
      overflow: hidden;
    }

    .left-section {
      background: url('/img/backgr1.jpeg') no-repeat center center/cover;
      width: 300px;
      height: 400px;
      position: relative;
    }

    .left-section .logo {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      background-color: rgba(255, 255, 255, 0.8);
      padding: 20px;
      border-radius: 10px;
    }

    .logo img {
      width: 100px;
      height: 100px;
    }

    .form-section {
      padding: 40px;
      width: 400px;
      height: 400px;
    }

    .form-section h2 {
      font-weight: 700;
      font-size: 24px;
      text-align: center;
      margin-bottom: 20px;
      color: #333;
    }

    .form-control {
      height: 40px;
      border-radius: 8px;
      padding-left: 12px;
    }

    .btn-arrow {
      height: 40px;
      width: 50px;
      border-radius: 10px;
      font-weight: bold;
      background-color: #007bff;
      color: white;
      border: none;
      transition: all 0.3s;
    }

    .btn-arrow:disabled {
      cursor: not-allowed;
    }

    .btn-primary {
      height: 40px;
      border-radius: 10px;
      font-weight: 600;
      font-size: 14px;
      background-color: #007bff;
    }

    .alert {
      font-size: 14px;
      padding: 10px;
      border-radius: 8px;
      display: none;
    }
  </style>
</head>
<body>
  <div class="forgot-container">
    <div class="left-section">
      <div class="logo">
        <img src="/img/logo.jpg" alt="Emporium The Shoe Store" />
      </div>
    </div>

    <div class="form-section">
      <h2>Forgot Password</h2>

      <div id="error-message" class="alert alert-danger text-center"></div>

      <form id="email-form" action="/forgot-password/send-otp" method="POST" class="mb-3 d-flex">
        <input type="email" name="email" class="form-control me-2" placeholder="Enter your email" />
        <button type="submit" class="btn-arrow">&rarr;</button>
      </form>

      <form id="otp-form" action="/forgot-password/verify-otp" method="POST">
        <input type="hidden" name="email" value="" />
        <div class="mb-3">
          <input type="text" name="otp" class="form-control" placeholder="Enter OTP" />
        </div>
        <button type="submit" class="btn btn-primary w-100">Submit</button>
      </form>
    </div>
  </div>

  <script>
    const errorMessages = {
      email: "Please fill out the field",
      otp: "Please fill out the field"
    };

    const emailForm = document.getElementById('email-form');
    const otpForm = document.getElementById('otp-form');
    const errorMessage = document.getElementById('error-message');
    const emailSubmitBtn = emailForm.querySelector('.btn-arrow');

    let timerInterval = null;

    function showMessage(message, isError = true) {
      errorMessage.textContent = message;
      errorMessage.className = `alert text-center ${isError ? 'alert-danger' : 'alert-success'}`;
      errorMessage.style.display = 'block';
      setTimeout(() => {
        errorMessage.style.display = 'none';
      }, 4000);
    }

    function startResendTimer() {
      let timeLeft = 30;
      emailSubmitBtn.disabled = true;
      emailSubmitBtn.style.opacity = '0.6';

      const updateButton = () => {
        emailSubmitBtn.innerHTML = `${timeLeft}s`;
        if (timeLeft <= 0) {
          clearInterval(timerInterval);
          emailSubmitBtn.disabled = false;
          emailSubmitBtn.style.opacity = '1';
          emailSubmitBtn.innerHTML = '&rarr;';
        }
        timeLeft--;
      };

      updateButton(); // immediate first update
      timerInterval = setInterval(updateButton, 1000);
    }

    emailForm.addEventListener('submit', async function(event) {
      event.preventDefault();
      const emailInput = emailForm.querySelector('input[name="email"]');
      const emailValue = emailInput.value.trim();

      // Clear any existing timer
      if (timerInterval) {
        clearInterval(timerInterval);
        emailSubmitBtn.disabled = false;
        emailSubmitBtn.style.opacity = '1';
        emailSubmitBtn.innerHTML = '&rarr;';
      }

      if (!emailValue) {
        showMessage(errorMessages.email, true);
        return;
      }

      try {
        const response = await fetch('/forgot-password/send-otp', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ email: emailValue })
        });

        const data = await response.json();

        if (data.success) {
          showMessage('OTP sent successfully!', false);
          otpForm.querySelector('input[name="email"]').value = emailValue;
          startResendTimer(); // start 30-second countdown on arrow button
        } else {
          showMessage(data.message || 'Failed to send OTP', true);
        }
      } catch (error) {
        console.error('Error sending OTP:', error);
        showMessage('Something went wrong. Please try again.', true);
      }
    });

    otpForm.addEventListener('submit', async function(event) {
      event.preventDefault();
      const emailValue = otpForm.querySelector('input[name="email"]').value.trim();
      const otpValue = otpForm.querySelector('input[name="otp"]').value.trim();

      if (!otpValue) {
        showMessage(errorMessages.otp, true);
        return;
      }
      if (!emailValue) {
        showMessage('Email is missing. Please start over.', true);
        return;
      }

      try {
        const response = await fetch('/forgot-password/verify-otp', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ email: emailValue, otp: String(otpValue) })
        });

        const data = await response.json();

        if (data.success) {
          showMessage('OTP verified successfully!', false);
          setTimeout(() => {
            window.location.href = `/change-password?email=${encodeURIComponent(emailValue)}`;
          }, 800);
        } else {
          showMessage(data.message || 'Invalid OTP', true);
        }
      } catch (error) {
        console.error('Error verifying OTP:', error);
        showMessage('Failed to verify OTP. Please try again.', true);
      }
    });
  </script>
</body>
</html>