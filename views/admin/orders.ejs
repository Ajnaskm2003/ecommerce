<%- include("../../views/partials/admin/header") %>

<style>
    .order-card {
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        padding: 20px;
        margin-bottom: 20px;
        transition: all 0.3s ease;
    }
    .order-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 20px rgba(0,0,0,0.2);
    }
    .order-img {
        width: 100px;
        height: 100px;
        object-fit: cover;
        border-radius: 8px;
    }
    .view-btn {
        background: #007bff;
        color: white;
        padding: 8px 15px;
        border-radius: 5px;
        text-decoration: none;
    }
    .view-btn:hover {
        background: #0056b3;
    }
    /* Status badge colors */
    .badge.pending { background-color: #ffc107; color: #000; }
    .badge.processing { background-color: #0d6efd; }
    .badge.shipped { background-color: #0dcaf0; }
    .badge.delivered { background-color: #198754; }
    .badge.cancelled { background-color: #dc3545; }
    .badge.return-requested,
    .badge.return-request { background-color: #6c757d; }
    .badge.returned { background-color: #6610f2; }
    
    /* Status date styles */
    .status-date {
        font-size: 0.85rem;
        color: #6c757d;
        margin-top: 5px;
    }
    .status-change-info {
        font-size: 0.8rem;
        color: #495057;
        background: #f8f9fa;
        padding: 5px 10px;
        border-radius: 4px;
        margin-top: 8px;
        border-left: 3px solid #007bff;
    }
</style>

<div class="container mt-5">
    <h2 class="mb-4">All Orders</h2>

    <% if (orders && orders.length > 0) { %>
        <% orders.forEach(order => { %>
            <div class="order-card row align-items-center">
                <div class="col-md-2 text-center">
                    <% const firstItem = order.orderItems[0]; %>
                    <% if (firstItem && firstItem.product && firstItem.product.image) { %>
                        <img src="<%= firstItem.product.image %>" 
                             alt="<%= firstItem.product.productName || 'Product' %>" 
                             class="order-img">
                    <% } else { %>
                        <img src="/uploads/default.jpg" 
                             alt="No Image Available" 
                             class="order-img">
                    <% } %>
                </div>

                <div class="col-md-3">
                    <h5><%= order.orderItems[0]?.product?.productName || 'Product Name Unavailable' %></h5>
                    <small class="text-muted">Order ID: <%= order.orderId %></small><br>
                    <small class="text-muted">
                        Ordered: <%= new Date(order.createdOn || order.createdAt).toLocaleDateString('en-IN') %>
                    </small>
                </div>

                <div class="col-md-4">
                    <div>
                        <strong>Current Status:</strong> 
                        <span class="badge <%= order.status.toLowerCase().replace(/ /g, '-') %>">
                            <%= order.status %>
                        </span>
                    </div>
                    
                    <!-- Show when current status was last updated -->
                    <div class="status-date">
                        <% if (order.currentStatusDate) { %>
                            <i class="fas fa-calendar-alt"></i>
                            Last updated: 
                            <%= new Date(order.currentStatusDate).toLocaleDateString('en-IN', { 
                                day: '2-digit', 
                                month: 'short', 
                                year: 'numeric',
                                hour: '2-digit',
                                minute: '2-digit'
                            }) %>
                        <% } %>
                    </div>
                    
                    <!-- Show recent status change if available -->
                    <% if (order.statusHistory && order.statusHistory.length > 1) { %>
                        <% 
                            // Get the most recent status change (excluding the current one if it's the only one)
                            const sortedHistory = order.statusHistory.sort((a, b) => new Date(b.date) - new Date(a.date));
                            const recentChange = sortedHistory[0];
                            const previousChange = sortedHistory[1];
                        %>
                        <% if (recentChange && previousChange) { %>
                            <div class="status-change-info">
                                <i class="fas fa-exchange-alt"></i>
                                <%= previousChange.status %> → <%= recentChange.status %> 
                                on <%= new Date(recentChange.date).toLocaleDateString('en-IN', { 
                                    day: '2-digit', 
                                    month: 'short'
                                }) %>
                            </div>
                        <% } %>
                    <% } %>
                    
                    <small class="d-block mt-2">
                        <strong>Total: ₹<%= order.totalAmount.toFixed(2) %></strong>
                    </small>
                </div>

                <div class="col-md-3 text-end">
                    <a href="/admin/order-details/<%= order.orderId %>" class="view-btn">
                        <i class="fas fa-eye"></i> View Details
                    </a>
                    <div class="mt-2">
                        <small class="text-muted">
                            Items: <%= order.orderItems.length %>
                        </small>
                    </div>
                </div>
            </div>
        <% }) %>
    <% } else { %>
        <div class="text-center py-5">
            <h4>No orders found</h4>
        </div>
    <% } %>

</div>

<%- include("../../views/partials/admin/footer") %>