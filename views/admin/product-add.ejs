    .image-upload-container {
        margin-bottom: 1rem;
    }

    .image-cropper {
        margin-top: 1rem;
        display: none;
    }

    .cropper-container {
        max-width: 100%;
    }

    .thumbnail {
        margin-right: 10px;
        margin-bottom: 10px;
    }

    .thumbnails-container {
        display: flex;
        flex-wrap: wrap;
    }
</style>
